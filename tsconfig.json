{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$lib": [
        "utils"
      ],
      "$lib/*": [
        "utils/*"
      ],
    },
    "types": [
      "node"
    ],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "api",
    "utils"
  ]
}